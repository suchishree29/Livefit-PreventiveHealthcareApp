<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:showDividers="beginning"
    android:verticalScrollbarPosition="right">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/apple" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/nutrition_facts"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:linksClickable="true"
                android:onClick="onClick"
                android:text="NUTRITION FACTS"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/morninSnackBtn"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Snack"
                    android:textColorLink="@android:color/holo_blue_dark" />

                <RadioButton
                    android:id="@+id/breakfastBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Breakfast"
                    android:textColorLink="@android:color/holo_blue_dark" />

            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/afternoonSnackBtn"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Afternoon Snack"
                    android:textColorLink="@android:color/holo_blue_dark" />

                <RadioButton
                    android:id="@+id/lunchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lunch"
                    android:textColorLink="@android:color/holo_blue_dark" />

            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/eveSnackBtn"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Evening Snack"
                    android:textColorLink="@android:color/holo_blue_dark" />

                <RadioButton
                    android:id="@+id/dinnerBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dinner"
                    android:textColorLink="@android:color/holo_blue_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/mealTimeTxt"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:text="Meal n Snacks Time"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/DatePicker01"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/logBtn"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="LOG THIS"
                android:textColor="@android:color/background_light" />

        </LinearLayout>
    </ScrollView>

    <!--<CalendarView-->
            <!--android:id="@+id/calendarView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="101dp"-->
            <!--android:layout_weight="1"-->
            <!--android:clickable="true" />-->

</LinearLayout>

