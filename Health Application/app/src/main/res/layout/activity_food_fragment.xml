<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.c02hp1dtdv35.healthapplication.Home.CameraFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="516dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="516dp">

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:paddingTop="25dp"
                android:elevation="15dp"
                app:cardCornerRadius="4dp"
                android:id="@+id/cardViewApple"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/food_card_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/apple"/>

                    <TextView
                        android:id="@+id/food_card_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/food_card_imageView"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:text="name:APPLE Calories:200,Fats: 2g,Vitamins:A"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:id="@+id/cardViewPizza"
                android:elevation="15dp"
                app:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardViewApple">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/food_card_pizza_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/pizza"/>

                    <TextView
                        android:id="@+id/food_card_pizza_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/food_card_pizza_imageView"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:text="name:Pizza,Calories:600,Fats:20gms,Transfats:10gms"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>





        </RelativeLayout>




    </ScrollView>


</FrameLayout>
